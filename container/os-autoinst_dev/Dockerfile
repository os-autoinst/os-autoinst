#!BuildTag: os-autoinst_dev
FROM opensuse/tumbleweed

# Define environment variable
ENV NAME openQA test environment
ENV LANG en_US.UTF-8

# install system-user-qemu already here to workaround bsc#1182451
RUN zypper ar -f -G 'http://download.opensuse.org/repositories/devel:/openQA/openSUSE_Tumbleweed' devel_openqa && zypper -n in system-user-qemu && zypper clean

